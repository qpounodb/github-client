{
  "name": "github-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "concurrently 'yarn:start:*' -p name -k",
    "start:cra": "craco start",
    "build:cra": "craco build",
    "start:sb": "start-storybook -p 6006 --quiet --disable-telemetry",
    "build:sb": "build-storybook -s public",
    "start:tsm": "typed-scss-modules 'src/**/*.module.{css,scss}' --watch",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "6",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@craco/craco": "^6.4.5",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/node-logger": "^6.5.10",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react-dom": "^18.0.0",
    "@types/react": "^18.0.0",
    "babel-plugin-named-exports-order": "^0.0.2",
    "concurrently": "^7.3.0",
    "prop-types": "^15.8.1",
    "react-scripts": "5.0.1",
    "sass": "^1.54.5",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typed-scss-modules": "^6.5.0",
    "typescript": "^4.4.2",
    "webpack": "^5.74.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^~/(.+)": "<rootDir>/src/$1"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.test.*"
        ],
        "rules": {
          "testing-library/no-node-access": [
            "error",
            {
              "allowContainerFirstChild": true
            }
          ]
        }
      },
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off",
          "quotes": [
            "warn",
            "single"
          ]
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
